# === BANCO DE DADOS ===
# Para desenvolvimento (SQLite)
DATABASE_URL=sqlite:///./multasgo.db

# Para produção (PostgreSQL) - Substitua com suas credenciais
# DATABASE_URL=postgresql://usuario:senha@localhost:5432/multasgo_prod

# === APLICAÇÃO ===
APP_NAME=MultasGO
DEBUG=false
LOG_LEVEL=INFO

# === SEGURANÇA - MUDE ESTAS CHAVES ===
SECRET_KEY=MUDE_ESTA_CHAVE_PARA_PRODUCAO_USE_CHAVE_FORTE_32_CHARS_MIN
ALLOWED_HOSTS=localhost,127.0.0.1,seu-dominio.com

# === PERFORMANCE E CACHE ===
MAX_CACHE_MEMORY_MB=100
CACHE_CLEANUP_INTERVAL=1800
HTTP_POOL_CONNECTIONS=10
HTTP_POOL_MAXSIZE=10
HTTP_TIMEOUT=30

# === WARM-UP ===
ENABLE_WARMUP=true
WARMUP_QUERIES=velocidade,alcool,celular,farol,estacionar,capacete,cinto

# === SEGURANÇA ===
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
BLOCK_DURATION=300
ENABLE_BOT_PROTECTION=true

# === DATABASE POOL ===
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600

# === PORTA ===
PORT=8080

# === PROJETO INFO ===
PROJECT_NAME=MultasGO
PROJECT_DESCRIPTION=Sistema Avançado de Pesquisa de Infrações de Trânsito
PROJECT_VERSION=2.0.0
FUZZY_SEARCH_THRESHOLD=85